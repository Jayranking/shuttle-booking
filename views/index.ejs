<!DOCTYPE html>
<html lang="en">

<head>
    <title>Index</title>
    <%- include('./snippets/headers.ejs') %>
</head>

<body>
    <!-- navbar start -->
     <%- include('./snippets/navbar.ejs') %>
     <!-- ends -->
   

    <div class="hero-wrap ftco-degree-bg" style="background-image: url('images/car-4.jpg');"
        data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text justify-content-start align-items-center justify-content-center">
                <div class="col-lg-8 ftco-animate">
                    <div class="text w-100 text-center mb-md-5 pb-md-5">
                        <h1 class="mb-4"> Easy Way To Book A Shuttle</h1>
                        <p style="font-size: 18px;">Book a shuttle tohour and get a shuttle to your destination</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section ftco-no-pt bg-light driver">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="col-md-12 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4 text-center">Better Way to Book Your Perfect Shuttles</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span
                                                class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Choose Your Destination</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span
                                                class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Select the Best Deal and Pay</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span
                                                class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Reserve Your Booked Shuttle</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>


    <section class="ftco-section ftco-no-pt bg-light driver">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                    <h4 class="mb-2">Featured Vehicles</h4>
                </div>
            </div>
            <div class="row">
                <% if (context.shuttles) { %>
                    <% context.shuttles.forEach(shuttle => { %>
                      <div class="col-md-4 mb-4 d-flex align-items-stretch">
                        <div class="card" style="width: 100%;">
                          <img src="/uploads/<%= shuttle.img %>" class="card-img-top" alt="shuttle picture" style="height: 200px; object-fit: cover;">
                          <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center">
                              <h5 class="card-title"><%= shuttle.vehicle_model %></h5>
                              <p class="card-title fw-bold text-danger">â‚¦<%= shuttle.amount %><span>/KM</span></p>
                            </div>
                            <p class="card-text" style="flex-grow: 1; overflow: hidden; text-overflow: ellipsis;">
                              <%= shuttle.description %>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                              <a href="/booking" class="btn btn-outline-success">Book Ride</a>
                              <a href="/details/?driverId=<%= shuttle._id %>" class="btn btn-outline-primary">Driver Details</a>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  <% } %>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-intro" style="background-image: url(images/car-4.jpg);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-md-6 heading-section heading-section-white ftco-animate">
                    <h2 class="mb-3">Do You Want To Earn With Us? So Don't Be Late.</h2>
                    <a href="/register" class="btn btn-primary btn-md fw-bold">Become A Driver</a>
                </div>
            </div>
        </div>
    </section>

    <!-- javascript  -->
     <%- include('./snippets/scripts.ejs') %>
    <!-- ends  -->

</body>

</html>